{
  "name": "template",
  "version": "1.0.0",
  "description": "React node express app template",
  "repository": "https://github.com/sobhan014/node-full-stack-template.git",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:client": "cd client && yarn start",
    "dev:server": "cd server && yarn dev",
